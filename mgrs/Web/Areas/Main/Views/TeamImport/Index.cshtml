                    @Html.TextBox("company", null, new { @class = "m-wrap small" })
                </label>
                <label>
                    <span>赛事：</span>
                    @Html.TextBox("matchname", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>
