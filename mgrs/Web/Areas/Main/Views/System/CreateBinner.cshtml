@using Model;
@using BLL;
@using Web;

@model tblbanner

@{
    ViewBag.Title = "新增";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">

            <div id="msg">@Html.Raw(ViewBag.ErrorMsg)</div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>赛事名称：</label>
                <div class="controls">
                    <select id="optMatch" name="optMatch" data-placeholder="请选择赛事" class="m-wrap large">
                        @Html.Raw(ViewBag.Matchs)
                    </select>
                </div>
            </div>      
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>类型：</label>
                <div class="controls">
                    <select id="optBannerType" name="optBannerType" data-placeholder="请选择Banner类型" class="m-wrap large">
                        @Html.Raw(ViewBag.BannerType)
                    </select>
                </div>
            </div>           
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>Banner图片</label>
                <div class="controls">
                    <input type="file" id="PicName" name="PicName" class=" multi max-1 with-preview" data-maxsize="1024" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">显示开始日期：</label>
                <div class="controls">
                    @if (Model.StartDateTime != null)
                    {
                        <input type="text" id="startDateTime" name="startDateTime" class="m-wrap small" value="@Model.StartDateTime.ToString("yyyy-MM-dd")" />
                    }
                    else
                    {
                        <input type="text" id="startDateTime" name="startDateTime" class="m-wrap small" />
                    }
                    
            </div>
                <div class="control-group">
                    <label class="control-label">显示结束日期：</label>
                    <div class="controls">
                        @if (Model.EndDateTime != null)
                        {
                            <input type="text" id="EndDateTime" name="EndDateTime" class="m-wrap small" value="@Model.EndDateTime.ToString("yyyy-MM-dd")" />
                        }
                        else
                        {
                            <input type="text" id="EndDateTime" name="EndDateTime" class="m-wrap small" />
                        }

                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label"><span class="required">*</span>排序：</label>
                    <div class="controls">
                        <input type="text" class="m-wrap small" id="Sort" name="Sort" value="@Model.Sort" />
                    </div>
                </div>
    </div>
}
<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>
<script type="text/javascript" src="@Url.Content("~/scripts/js/datepicker/jquery-ui.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/jquery.form.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Content/Scripts/jQuery.MultiFile.min.js")"></script>
            <script type="text/javascript" src="@Url.Content("~/scripts/js/datepicker/jquery-ui.js")"></script>
            <script>
                $(function () {
                    $("#startDateTime").datepicker({ dateFormat: 'yy-mm-dd' });
                    $("#EndDateTime").datepicker({ dateFormat: 'yy-mm-dd' });
                });

            </script>


