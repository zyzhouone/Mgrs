@using Model;
@using BLL;
@using Web;

@model tblmatchusers

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
    </script>
}

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            @Html.HiddenFor(m => m.Matchuserid)
            <div id="msg">@Html.Raw(ViewBag.ErrorMsg)</div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队伍名称：</label>
                <div class="controls">
                    <input type="text" class="m-wrap small" readonly="true" value="@Model.Teamname" />
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队员名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Nickname, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Nickname)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>电话：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Mobile, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Mobile)</span>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>

