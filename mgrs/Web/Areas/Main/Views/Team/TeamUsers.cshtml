@using Model;
@using BLL;
@using Web;

@model List<tblmatchusers>

@{
    ViewBag.Title = "队伍信息";
    Layout = "~/Views/Shared/_Layout.View.cshtml";
}

@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队伍名称：</label>
                <div class="controls">
                    <label class="m-wrap large">@ViewBag.teamname</label>
                </div>
            </div>
            @if (Model != null && Model.Count > 0)
            {
                for(int i=0;i<Model.Count;i++)
                {
                 <div class="control-group">
                    <label class="control-label">队员：</label>
                    <div class="controls">
                        <label class="m-wrap large">@Model[i].Nickname &nbsp;&nbsp;&nbsp;&nbsp;@Model[i].Mobile</label>
                    </div>
                </div>
                }
            }
      
           
        </div>
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>附加信息：</label>
                <div class="controls">
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"></label>
                <div class="controls">

                    @if (ViewData["teamExtra"]!=null)
                    { 
                    foreach (var m in ViewData["teamExtra"] as List<tblteamextra>)
                    {
                        @m.info2<br />
                        @m.info1<br />
                    <img src="@m.info3" style="width:350px;height:auto"/><br />
                    }
                    }
                </div>
            </div>
        </div>
    </div>
}

