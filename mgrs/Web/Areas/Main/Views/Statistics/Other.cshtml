@using Utls;
@using Model;
@using Web;
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .head_ {
        background-color: #4d90fe;
        height: 30px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        padding-top: 5px;
        text-align: center;
    }
</style>
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        {
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">
                        搜索 <i class="icon-search"></i>
                    </button>
                </label>
                <label>
                    <span>赛事名称：</span>
                    <select id="optMatch" name="optMatch" data-placeholder="请选择赛事" class="m-wrap large">
                        @Html.Raw(ViewBag.Matchs)
                    </select>
                </label>
            </div>
        }
    </div>
</div>
<div class="row-fluid">
    <div class="span4">
        <div class="head_">
            <div class="span12">性别统计</div>
        </div>
        <table class="table table-striped table-hover " style="border-top-width: 0px;">
            <thead>
                <tr>
                    <th>性别</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>男</td>
                    <td>@ViewBag.male</td>
                </tr>
                <tr>
                    <td>女</td>
                    <td>@ViewBag.female</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="span4">
        <div class="head_">
            <div class="span12">年龄统计</div>
        </div>
        <table class="table table-striped table-hover " style="border-top-width: 0px;">
            <thead>
                <tr>
                    <th>年龄</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>18岁以下</td>
                    <td>@ViewBag.q1</td>
                </tr>
                <tr>
                    <td>19~30岁</td>
                    <td>@ViewBag.q2</td>
                </tr>
                <tr>
                    <td>31~48岁</td>
                    <td>@ViewBag.q3</td>
                </tr>
                <tr>
                    <td>49岁以上</td>
                    <td>@ViewBag.q4</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="span4">

    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/scripts/js/selector/jquery-1.10.js")"></script>
