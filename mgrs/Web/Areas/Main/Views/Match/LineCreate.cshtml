@using Model;
@using BLL;
@using Web;

@model tblline

@{
    ViewBag.Title = "新增";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}

@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#mainForm").submit(function () {

                return true;
            });
        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div id="msg">@Html.Raw(ViewBag.ErrorMsg)</div>
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>赛事名称：</label>
                <div class="controls">
                    <select id="optMatch" name="optMatch" data-placeholder="请选择赛事" class="m-wrap large">
                        @Html.Raw(ViewBag.Matchs)
                    </select>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>线路名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Name, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">简介：</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.Content, new { @class = "m-wrap large" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Content)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队伍人数：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Players, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Players)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label"><span class="required">*</span>队伍上限：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Count, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Count)</span>
                </div>
            </div>

            @*<div class="control-group">
                <label class="control-label">个人价格：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.personprice, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.personprice)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">团队价格：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.teamprice, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.teamprice)</span>
                </div>
            </div>*@

            <div class="control-group">
                <label class="control-label">类型：</label>
                <div class="controls">
                    <select id="optStatus" name="optStatus" data-placeholder="请选择状态" class="m-wrap small">
                        @Html.Raw(ViewBag.Status)
                    </select>
                </div>
            </div>
        </div>
    </div>
}


